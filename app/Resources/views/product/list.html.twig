{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
{% for product in products %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="{{ path('product_view', {'id': product.id}) }}" title="{{ product.title }}">
                    <img style="min-height: 180px; max-height: 180px; width: auto" src="{{ '/images/product/'~product.image }}" alt="">
                </a>
                <div class="caption">

                    <h4><a href="{{ path('product_view', {'id': product.id}) }}" title="{{ product.title }}">
                            {{ product.title |slice (0, 18) }}</a>
                    </h4>
                    <p><h4><span style="text-decoration-line: line-through; color: red;">{{ product.price |number_format(2, '.', ',') }}</span> {{ calc.calculate(product) |number_format(2, '.', ',') }} BGN</h4>
                    {{ product.description |slice (0, 50) }}.</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">15 reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}


{% extends 'admin.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>*****</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ user.role }}</td>
        </tr>
        <tr>
            <th>User Cash</th>
            <td>{{ user.cash }} BGN</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ statuses[user.status] }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-primary">Edit</a>
    <hr>
    <a href="{{ path('admin_user_index') }}" class="btn btn-success">Back to the list</a>


{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h3>My Current cash is <span style="color:blue">{{ user.cash }} BGN</span></h3>
    <h3>My Orders</h3>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
        <tr>
            <td><a href="{{path('orders_show', { 'id': order.id })}}">{{ order.id }}</a></td>
            <td>{{ order.user.username }}</td>
            <td>{{ order.date|date('Y-m-d H:i:s') }}</td>
            <td>{{ statuses[order.status] }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>




{% endblock %}


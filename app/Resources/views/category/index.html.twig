{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Categories list</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Create a new category</a>
    <hr>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_show', { 'id': category.id }) }}" class="btn btn-success">show</a>
                    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

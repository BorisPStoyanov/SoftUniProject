{% set active_class = "" %}
{% if category_id == 0 %}
    {% set active_class = " active" %}
{% endif %}
<a href="/product/list/{{ 0 }}" class="list-group-item{{ active_class }}">Всички</a>
{% set active_class = "" %}
{% for category in categories %}
    {% if category_id == category.id %}
        {% set active_class = " active" %}
    {% endif %}
    <a href="/product/list/{{ category.id }}" class="list-group-item{{ active_class }}">
        {{ category.name }}
    </a>
    {% set active_class = "" %}
{% endfor %}






{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}" class="btn btn-primary">Edit</a>
    <div style="float:right;">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>

    <hr>
    <a href="{{ path('admin_category_index') }}" class="btn btn-success">Back to the list</a>



{% endblock %}
